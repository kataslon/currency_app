<div class="page-header">
  <h1> Trips </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> id </th>
      <th> Name </th>
      <th> Description </th>
      <th> Created_at </th>
      <th> Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.id, trip_path(trip) %></td>
        <td><%= trip.name %></td>
        <td><%= trip.description %></td>
        <td><%=l trip.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_trip_path(trip), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Delete',
                      trip_path(trip),
                      :method => :delete,
                      :data => { :confirm => ('Are you sure?') },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_trip_path, :class => 'btn btn-primary' %>
