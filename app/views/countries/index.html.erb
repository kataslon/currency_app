<div class="page-header">
  <h1> Countries whith <%= Currency.find(params[:currency_id]).currency %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> id </th>
      <th> Country </th>
      <th> Visited </th>
      <th> Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.id %></td>
        <td><%= country.country %></td>
        <td><%= country.visited %></td>
        <td>
          <%= link_to 'Edit', edit_country_path(country), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

 <%= link_to 'Back', currencies_path, :class => 'btn btn-default' %>
